{
	"name": "greenlane",
	"main": "greenlane",
	"version": "1.0.0",
	"description": "augmented writing for the cli - w/ realtime spell checking &amp; statistics",
	"license": "MIT",
	"repository": "F1LT3R/green-lane",
	"author": {
		"name": "F1LT3R",
		"email": "al@pwn.io",
		"url": "f1lt3r.io"
	},
	"bin": "lib/cli.js",
	"preferGlobal": true,
	"scripts": {
		"test": "xo && yarn run cover",
		"unit": "ava",
		"watch": "ava --watch",
		"cover": "nyc --reporter=lcov --reporter=html --reporter=text ava *.test.js",
		"coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls -v"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm test"
		}
	},
	"files": [
		"index.js",
		"cli.js"
	],
	"keywords": [
		"cli-app",
		"cli"
	],
	"dependencies": {
		"meow": "^3.7.0"
	},
	"devDependencies": {
		"ava": "latest",
		"coveralls": "latest",
		"husky": "latest",
		"nyc": "latest",
		"xo": "latest"
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"esnext": true,
		"semicolon": false,
		"globals": [
			"__dirname"
		],
		"rules": {
			"no-console": 1,
			"space-before-function-paren": 0
		}
	},
	"ava": {
		"failFast": true
	}
}
